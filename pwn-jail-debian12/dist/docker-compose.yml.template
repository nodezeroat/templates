services:
  challenge:
    image: localhost/${NAME}
    container_name: ${NAME}
    build: .
    ports:
      - ${HOST}:${PORT}:1337
    environment:
      - HOST=${HOST}
      - PORT=${PORT}
      - TIMEOUT=${TIMEOUT}
    pull_policy: never
    read_only: true
    privileged: true
    platform: linux/amd64